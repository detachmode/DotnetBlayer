
@CustomRender


@functions {
    private RenderFragment CustomRender { get; set; }

    [Parameter] public IBlayerTool Tool { get; set; }

    protected override void OnParametersSet()
    {
        if(Tool != null)
        {
            CustomRender = CreateComponent(Tool);
        }

    }
    
    private RenderFragment CreateComponent(IBlayerTool tool) => builder =>
    {
        builder.OpenComponent<BlayerBase>(0);
        builder.AddAttribute(1, "Tool", Microsoft.AspNetCore.Components.RuntimeHelpers.TypeCheck<IBlayerTool>(tool));
        builder.CloseComponent();
    };    

}
